<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/WidgetBackground"
    android:padding="18px">
<LinearLayout
    android:id="@+id/btn_refresh"   
	android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
		android:id="@+id/refresh_tv"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:background="#00000000"
    	android:paddingRight="5px"
    	android:paddingLeft="2px"
    	android:text=""
   	    android:gravity="left"
   	    android:layout_weight="1"/>
    <ImageView
    	android:src="@drawable/refresh" 
    	android:layout_gravity="right" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:background="#00000000"
    	android:paddingTop="3px"
    	android:paddingRight="2px"
    	android:gravity="right"/>    	
</LinearLayout>    	
	    <ImageView
	        android:layout_width="fill_parent" 
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/divider_horizontal"
	    	android:layout_gravity="center_horizontal" 
	    	android:layout_height="wrap_content" 
	    	android:layout_marginTop="2dp"/>    	
    <LinearLayout android:id="@+id/taskbody"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
	    android:orientation="vertical">
    	
    	<TextView
	        android:id="@+id/task_1"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:singleLine="true"
	        android:maxWidth="115dip"
	        style="@style/TextLoading" 
	        />
	    <ImageView
	    	android:id="@+id/separator_1"	    
	        android:layout_width="fill_parent" 
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/divider_horizontal"
	    	android:layout_gravity="center_horizontal" 
	    	android:layout_height="wrap_content" 
	    	android:layout_marginTop="4dp"/>  


    	<TextView
	        android:id="@+id/task_2"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:singleLine="true"
	        android:maxWidth="115dip"
	        style="@style/TextLoading" 
	        android:layout_marginTop="4dp"/>

	    <ImageView
	    	android:id="@+id/separator_2"	    
	        android:layout_width="fill_parent" 
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/divider_horizontal"
	    	android:layout_gravity="center_horizontal" 
	    	android:layout_height="wrap_content" 
	    	android:layout_marginTop="4dp"/>  


    	<TextView
	        android:id="@+id/task_3"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:singleLine="true"
	        android:maxWidth="115dip"
	        style="@style/TextLoading" 
	        android:layout_marginTop="4dp"/>

	    <ImageView
   	    	android:id="@+id/separator_3"
	        android:layout_width="fill_parent" 
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/divider_horizontal"
	    	android:layout_gravity="center_horizontal" 
	    	android:layout_height="wrap_content" 
	    	android:layout_marginTop="4dp"/>  


    	<TextView
	        android:id="@+id/task_4"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:singleLine="true"
	        android:maxWidth="115dip"
	        style="@style/TextLoading" 
	        android:layout_marginTop="4dp"/>

	    <ImageView
	    	android:id="@+id/separator_4"
	        android:layout_width="fill_parent" 
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/divider_horizontal"
	    	android:layout_gravity="center_horizontal" 
	    	android:layout_height="wrap_content" 
	    	android:layout_marginTop="4dp"/> 

    	<TextView
	        android:id="@+id/task_5"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:singleLine="true"
	        android:maxWidth="115dip"
	        style="@style/TextLoading" 
	        android:layout_marginTop="4dp"/>
	        
    </LinearLayout>
</LinearLayout>
